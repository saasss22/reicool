<?php
function llogaritFaktorjalin($n) {
    if ($n < 0) {
        return "Faktorjali nuk përkufizohet për numra negativë.";
    }
    if ($n == 0 || $n == 1) {
        return 1;
    }

    $rezultati = 1;
    for ($i = 2; $i <= $n; $i++) {
        $rezultati *= $i; // Shumëzon rezultatin me i
    }
    return $rezultati;
}

$numri = 5;
$faktorjali = llogaritFaktorjalin($numri);

echo "1. Faktorjali i $numri! është: **$faktorjali**";
// Rezultati: 1. Faktorjali i 5! është: 120
?>
